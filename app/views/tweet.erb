  <p> HEY <%=current_user.screen_name%></p>
  <h1>Tweet Now</h1>
  <p id='tweet'>
    <form id='tweet-layout' name='tweet' action='/tweet' method='post'>
     <h1>Tweet Something:   </h1>
     <div><input type='text' name='tweet' placeholder="Make it cool"></div>
     <input class="regular_button" type = 'submit' value='Submit'>
     <br>
   </form>
 </p>
 <h1>Tweet X minutes from now</h1>
 <p id='tweet_later'>
    <form id='tweet-layout-later' name='tweet' action='/tweet_later' method='post'>
     <h1>Tweet Something:   </h1>
     <input type='text' name='tweet' placeholder="Make it cool">
     <input type='text' name='minutes' placeholder="time in minutes">
     <input class="regular_button" type = 'submit' value='Submit'>
     <br>
   </form>
 </p>
